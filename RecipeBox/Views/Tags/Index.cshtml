@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet!</h3>
} 

@foreach (Tag tag in Model)
{
  <li>@Html.ActionLink($"{tag.Title}", "Details", new { id = tag.TagId })</li>
}
<hr><br>

<p>@Html.ActionLink("Add new tag", "Create", "Tags", null, new { @class = "btn btn-light" })</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-light" })</p>
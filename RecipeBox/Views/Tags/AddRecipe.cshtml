@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h2>Add a recipe</h2>
<hr><br>

<h4>Add a recipe to this tag: @Html.DisplayFor(model => model.Title)</h4>
<br>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)

    @Html.Label("Select recipe: ")
    @Html.DropDownList("RecipeId")
    <br>
    <input type="submit" value="Save" />
}
<hr><br>
<p>@Html.ActionLink("Back to list", "Index", "Tags", null, new { @class = "btn btn-light"})</p>
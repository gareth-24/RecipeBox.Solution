@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Recipes</h1>
<hr>
<div class="card" style="width: 15rem;"> 
@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 
else
{
  <h6>Recipe Name | Rating</h6>
}

<ul>
  @foreach(Recipe recipe in Model)
  {
    <li>@Html.ActionLink($"{recipe.RecipeName}  | {recipe.Rating}/10", "Details", new { id = recipe.RecipeId })</li>
  }
</ul>
</div>
<hr><br>


  <p>@Html.ActionLink("Add new recipe", "Create", "Recipes", null, new { @class = "btn btn-light" })</p>

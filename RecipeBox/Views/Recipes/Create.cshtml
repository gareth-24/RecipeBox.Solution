@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add a new recipe</h4>
<hr>


<p>@Html.ValidationMessageFor(model => model.RecipeName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Instructions, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.RecipeName, "Recipe Name")<br>
  @Html.TextBoxFor(model => model.RecipeName, new { placeholder = "Mom's spaghetti", style="font-style:italic"})
  <br>
  <br>
  @Html.LabelFor(model => model.Description)<br>
  @Html.TextBoxFor(model => model.Description, new { placeholder = "Yummy pasta dish", style="font-style:italic"})
  <br>
  <br>
  @Html.LabelFor(model => model.Instructions)<br>
  @Html.TextAreaFor(model => model.Instructions, 5, 40, new { placeholder = "1. Boil water\n2. Add pasta\n3. Cook for 10 minutes", style="font-style:italic"})
  <br>
  <br>
  @Html.LabelFor(model => model.Rating)<br>
  @Html.TextBoxFor(model => model.Rating, new {@type="number", required = "required", placeholder="8", style="font-style:italic"})<br>
  <br>
  <input type="submit" value="Add new recipe" class="btn btn-light" />
}
<hr><br>
<p>@Html.ActionLink("Show all recipes", "Index", "Recipes", null, new { @class = "btn btn-light" })</p>